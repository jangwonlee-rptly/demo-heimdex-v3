{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "services/worker/Dockerfile",
    "buildContext": "../.."
  },
  "deploy": {
    "startCommand": "dramatiq src.tasks -p 1 -t 1",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
