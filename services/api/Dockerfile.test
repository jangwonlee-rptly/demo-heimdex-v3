# Dockerfile for running tests in containerized environment
# This extends the production Dockerfile with test dependencies

FROM python:3.11-slim

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

# Set working directory
WORKDIR /app

# Copy dependency files
COPY services/api/pyproject.toml ./

# Install production dependencies
RUN uv pip install --system \
    fastapi>=0.109.0 \
    uvicorn[standard]>=0.27.0 \
    pydantic>=2.5.0 \
    pydantic-settings>=2.1.0 \
    python-jose[cryptography]>=3.3.0 \
    python-multipart>=0.0.6 \
    httpx>=0.26.0 \
    psycopg[binary]>=3.1.0 \
    supabase>=2.3.0 \
    dramatiq[redis]>=1.15.0 \
    redis>=5.0.0 \
    openai>=1.10.0

# Install test dependencies
RUN uv pip install --system \
    pytest>=7.4.0 \
    pytest-asyncio>=0.21.0 \
    pytest-cov>=4.1.0 \
    pytest-mock>=3.12.0

# Copy shared libraries (required for imports)
COPY libs/ ./libs/

# Copy application code
COPY services/api/src/ ./src/

# Copy test files
COPY services/api/tests/ ./tests/
COPY services/api/pytest.ini ./

# Set Python path
ENV PYTHONPATH=/app

# Default command runs tests
CMD ["pytest", "-v", "--cov=src", "--cov-report=term-missing"]
